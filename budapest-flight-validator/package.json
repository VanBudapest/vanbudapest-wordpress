{
  "name": "budapest-flight-validator",
  "version": "1.0.0",
  "description": "BUD Érkező Járatszám Ellenőrző - Budapest repülőtérre érkező járatok validálása Excel fájlokból",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron-dev": "electron .",
    "build:win": "electron-builder build --win",
    "build:mac": "electron-builder build --mac",
    "build:linux": "electron-builder build --linux"
  },
  "keywords": [
    "budapest",
    "flight",
    "validator",
    "BUD",
    "airport",
    "excel"
  ],
  "author": "VanBudapest.com",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "exceljs": "^4.4.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.vanbudapest.budflightvalidator",
    "productName": "BUD Flight Validator",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/@electron/**/*",
      "!node_modules/electron-builder/**/*"
    ]
  }
}
